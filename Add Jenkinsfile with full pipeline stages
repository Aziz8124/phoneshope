pipeline {
    agent any

    environment {
        // تأكد إنو هذا الـ ID مطابق للـ Credential في Jenkins
        SONAR_TOKEN = credentials('SONAR_TOKEN')
    }

    tools {
        maven 'Maven_3.8.8'
        jdk 'Java_17'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Checking out from Git...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project using Maven...'
                bat "\"${tool 'Maven_3.8.8'}\\bin\\mvn\" clean package"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube analysis...'
                withSonarQubeEnv('MySonarQube') {
                    bat "\"${tool 'Maven_3.8.8'}\\bin\\mvn\" sonar:sonar -Dsonar.projectKey=phoneshope -Dsonar.host.url=http://localhost:9090 -Dsonar.login=${env.SONAR_TOKEN}"
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat "\"${tool 'Maven_3.8.8'}\\bin\\mvn\" test"
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
