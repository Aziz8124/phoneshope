pipeline {
    agent any

    tools {
        jdk 'Java_17'        // اسم JDK معرف في Jenkins
        maven 'Maven_3.8.8'  // اسم Maven معرف في Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo "جاري سحب الكود من Git..."
                git branch: 'main', url: 'https://github.com/username/repo.git'
            }
        }

        stage('Build') {
            steps {
                echo "بدء عملية البناء..."
                // أوامر البناء لويندوز
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo "تشغيل الاختبارات..."
                bat 'mvn test'
            }
        }
    }

    post {
        always {
            // ينفذ بعد كل Build سواء نجح أو فشل
            mail to: 'azoz.sh2003@gmail.com',
                 subject: "Jenkins Build Notification: ${currentBuild.fullDisplayName}",
                 body: """مرحبا،
Build رقم ${currentBuild.number} على المشروع ${env.JOB_NAME} انتهى.
الحالة: ${currentBuild.currentResult}

تحيات،
Jenkins"""
        }

        failure {
            // ينفذ فقط إذا فشل الـ Build
            mail to: 'azoz.sh2003@gmail.com',
                 subject: "⚠️ Jenkins Build FAILED: ${currentBuild.fullDisplayName}",
                 body: """مرحبا،
Build رقم ${currentBuild.number} على المشروع ${env.JOB_NAME} فشل.
يرجى المراجعة فوراً.

تحيات،
Jenkins"""
        }

        success {
            // ينفذ فقط إذا نجح الـ Build
            mail to: 'azoz.sh2003@gmail.com',
                 subject: "✅ Jenkins Build SUCCESS: ${currentBuild.fullDisplayName}",
                 body: """مرحبا،
Build رقم ${currentBuild.number} على المشروع ${env.JOB_NAME} نجح بنجاح.

تحيات،
Jenkins"""
        }
    }
}
