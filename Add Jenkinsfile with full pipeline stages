pipeline {
    agent any

    tools {
        maven 'Maven_3.8.8'  // تأكد الاسم مطابق لما موجود في Jenkins
        jdk 'Java_17'        // تأكد الاسم مطابق لما موجود في Jenkins
    }

    environment {
        // البريد الإلكتروني لإشعارات Jenkins
        MAIL_RECIPIENT = "azoz.sh2003@gmail.com"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                // سحب الكود من GitHub باستخدام Personal Access Token
                git branch: 'main',
                    url: 'https://github.com/Aziz8124/phoneshope.git',
                    credentialsId: 'GITHUB_CREDENTIALS_ID' // استبدل بالـ ID الصحيح
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                bat 'mvn clean package'  // على ويندوز استخدم bat
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
            mail to: "${MAIL_RECIPIENT}",
                 subject: "Jenkins Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Good news! The build was successful.\nCheck console output at: ${env.BUILD_URL}"
        }
        failure {
            echo 'Build failed!'
            mail to: "${MAIL_RECIPIENT}",
                 subject: "Jenkins Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build failed. Please check the console output at: ${env.BUILD_URL}"
        }
    }
}
