pipeline {
    agent any

    tools {
        maven 'Maven_3.8.8' // تأكد أن الاسم مطابق لما هو مضاف في Jenkins
        jdk 'Java_17'       // تأكد أن JDK 17 معرف في Jenkins
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Aziz8124/phoneshope.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target\\surefire-reports\\*.xml' // تقارير الاختبارات
                }
            }
        }

        stage('Package') {
            steps {
                bat 'mvn package -DskipTests'
            }
        }

        stage('Deploy') {
            steps {
                echo '⚡ نشر التطبيق... (هنا تضع خطوات النشر الخاصة فيك)'
                // مثال: bat 'start /B java -jar target\\phoneshope-0.0.1-SNAPSHOT.jar'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline نجح!'
            // مثال على إشعار بريد أو Slack
            // mail to: 'team@example.com', subject: 'Build Success', body: 'The build passed!'
        }
        failure {
            echo '❌ Pipeline فشل!'
            // mail to: 'team@example.com', subject: 'Build Failed', body: 'The build failed, check Jenkins logs.'
        }
    }
}
